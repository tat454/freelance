/* 全局樣式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
  --primary-color: #4CAF50;
  --secondary-color: #2196F3;
  background-color: #f8f8f8;
}

/* 通用容器 */
.container {
  padding: 30rpx;
  box-sizing: border-box;
}

/* 卡片樣式 */
.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 主要按鈕 */
.btn-primary {
  background-color: var(--primary-color);
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

/* 次要按鈕 */
.btn-outline {
  background-color: #fff;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: 8rpx;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

/* 標籤樣式 */
.tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  background: #e8f5e9;
  color: var(--primary-color);
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
}

/* 列表項 */
.list-item {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 2rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 分隔線 */
.divider {
  height: 2rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}

/* 文本樣式 */
.text-primary {
  color: var(--primary-color);
}

.text-secondary {
  color: #666;
  font-size: 26rpx;
}

.text-small {
  font-size: 24rpx;
}

/* 搜索框 */
.search-box {
  background: #fff;
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

/* 加載更多 */
.loading {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
} 